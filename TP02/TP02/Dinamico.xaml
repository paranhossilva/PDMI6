<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP02.Dinamico">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" CornerRadius="0">
                <Label Text="Trabalho Prático 02" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label Text="Estilo Dinâmico" FontSize="Title" HorizontalTextAlignment="Center"/>

            <Label x:Name="lblTime" FontSize="Title" Text="" HorizontalTextAlignment="Center"/>

            <Button x:Name="btnVoltar" Text="Voltar" BackgroundColor="Blue" TextColor="White" CornerRadius="5" Clicked="btnVoltar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>